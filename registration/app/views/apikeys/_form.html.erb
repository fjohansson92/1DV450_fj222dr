<%= form_for([@user, @apikey], html: {class: "form-horizontal" }) do |f| %>
	<div class="col-sm-10 col-sm-offset-2">
		<% if @apikey.errors.any? %>
			<div id="apikey_errors">
				<ul>
					<% @apikey.errors.full_messages.each do |error| %>
						<li><%= error %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
	</div>
	<div class="form-group">
		<%= f.label :name, class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	<% if current_user.admin? %>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<div class="checkbox">
					<label>
						<%= f.check_box :revoked %>
						<%= f.label :revoked %>
					</label>
				</div>
			</div>
		</div>
	<% end %>
	<div class="col-sm-offset-2">
		<%= f.submit olduser ? "Spara" : "Registrera API-nyckel", class: 'btn btn-primary' %>
	</div>

<% end %>
